{
  "name": "buddy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "firebase deploy --only hosting",
    "test": "npx playwright test --project=chromium",
    "test:fast": "npx playwright test --project=chromium --workers=100%",
    "test:smoke": "npx playwright test tests/auth.spec.js -g '1.2' --project=chromium",
    "test:all": "npx playwright test",
    "test:ai": "node tests/run-all-tests.js",
    "test:debug": "npx playwright test --debug",
    "test:headed": "npx playwright test --headed --project=chromium",
    "test:report": "npx playwright show-report",
    "test:ui": "npx playwright test --ui",
    "mobile:sync": "npx cap sync",
    "mobile:build": "npm run build && npx cap sync",
    "ios:open": "npx cap open ios",
    "ios:run": "npm run mobile:build && npx cap open ios",
    "android:open": "npx cap open android",
    "android:run": "npm run mobile:build && npx cap open android",
    "mobile:clean": "rm -rf ios/App/App/public android/app/src/main/assets/public"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "firebase-tools": "^14.24.0",
    "gh-pages": "^6.1.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/camera": "^7.0.2",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/geolocation": "^7.1.5",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "axios": "^1.9.0",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.3",
    "react-scripts": "^5.0.1",
    "web-vitals": "^4.2.4"
  }
}
